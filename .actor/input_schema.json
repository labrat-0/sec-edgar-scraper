{
    "title": "SEC EDGAR Entity Resolver - Input",
    "type": "object",
    "properties": {
        "mode": {
            "title": "Mode",
            "type": "string",
            "enum": [
                "resolve_entity",
                "search_filings",
                "get_company_facts"
            ],
            "default": "resolve_entity"
        },
        "query": {
            "title": "Search query (name or text)",
            "type": "string",
            "description": "Company name/ticker for resolve_entity, or free text for filing search"
        },
        "cik": {
            "title": "CIK",
            "type": "string",
            "description": "10-digit CIK (optional; zero-padded if shorter)"
        },
        "ticker": {
            "title": "Ticker",
            "type": "string",
            "description": "Stock ticker to resolve to CIK"
        },
        "formTypes": {
            "title": "Form types",
            "type": "array",
            "items": { "type": "string" },
            "description": "List of form types to include (e.g., 10-K, 10-Q, 8-K)"
        },
        "dateFrom": {
            "title": "Filed from (YYYY-MM-DD)",
            "type": "string"
        },
        "dateTo": {
            "title": "Filed to (YYYY-MM-DD)",
            "type": "string"
        },
        "maxResults": {
            "title": "Max results",
            "type": "integer",
            "default": 100,
            "minimum": 1,
            "maximum": 1000
        },
        "start": {
            "title": "Start offset",
            "type": "integer",
            "default": 0,
            "minimum": 0
        },
        "maxRecentFilings": {
            "title": "Max recent filings (resolve_entity)",
            "type": "integer",
            "default": 10,
            "minimum": 1,
            "maximum": 100
        },
        "namespaces": {
            "title": "XBRL namespaces (facts)",
            "type": "array",
            "items": { "type": "string" },
            "description": "Filter company facts by namespaces (e.g., us-gaap)"
        },
        "concepts": {
            "title": "XBRL concepts",
            "type": "array",
            "items": { "type": "string" },
            "description": "Filter company facts by concept names"
        },
        "periodType": {
            "title": "Period type",
            "type": "string",
            "enum": ["instant", "duration"],
            "description": "Filter facts by period type"
        },
        "userAgent": {
            "title": "Custom User-Agent (SEC required)",
            "type": "string",
            "description": "Format: 'Your Name YourEmail@example.com'"
        },
        "includeAmendments": {
            "title": "Include amended forms (*/A)",
            "type": "boolean",
            "default": true
        },
        "formPrefix": {
            "title": "Form prefix filter",
            "type": "string",
            "description": "Optional prefix (e.g., '10-') to include related forms"
        },
        "requestIntervalSecs": {
            "title": "Request interval (seconds)",
            "type": "number",
            "default": 0.3,
            "minimum": 0.1,
            "maximum": 5
        },
        "timeoutSecs": {
            "title": "HTTP timeout (seconds)",
            "type": "integer",
            "default": 30,
            "minimum": 5,
            "maximum": 120
        },
        "maxRetries": {
            "title": "Max retries",
            "type": "integer",
            "default": 5,
            "minimum": 0,
            "maximum": 10
        }
    },
    "required": ["mode"],
    "additionalProperties": false
}
